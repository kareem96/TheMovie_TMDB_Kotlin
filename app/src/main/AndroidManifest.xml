<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kareem.moviekt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.movie.ActivityDetails"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.movie.MainActivity" />
        </activity>

        <activity
            android:name=".ui.movie.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.movie.MainActivity" />

        </activity>
        <activity
            android:name=".ui.movie.ViewAllMovie"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.movie.MainActivity" />

        </activity>
        <activity
            android:name=".ui.tv.ViewAllTv"
            android:screenOrientation="portrait"
            android:theme="@style/NoAnimTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.tv.TvActivity" />

        </activity>
        <activity
            android:name=".ui.favorite.FavoriteActivity"
            android:label="Favorite" />
        <activity android:name=".ui.tv.TvActivity" />


        <activity android:name=".ui.movie.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>