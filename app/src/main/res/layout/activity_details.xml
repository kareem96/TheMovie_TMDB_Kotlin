<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.movie.ActivityDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:layout_marginTop="-2sp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:scrollbarSize="4sp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scrollbarSize="4sp">




                        <androidx.cardview.widget.CardView
                            android:layout_width="120dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="match_parent">
                            <ProgressBar
                                android:id="@+id/progressBar4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#00FFFFFF"
                                android:scaleX="0.50"
                                android:scaleY="0.50"
                                android:textColor="#E6EAEE"
                                android:visibility="visible" />
                            <ImageView
                                android:id="@+id/img_poster_path"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="30sp"
                                android:scrollbarSize="4sp"
                                android:visibility="visible" />

                        </androidx.cardview.widget.CardView>



                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical"
                        android:scrollbarSize="4sp">

                        <TextView
                            android:id="@+id/tv_release_date"
                            android:layout_width="match_parent"
                            android:layout_height="35sp"
                            android:layout_marginTop="30dp"
                            android:scrollbarSize="4sp"
                            android:text="loading ..."
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:src="@drawable/ic_star_2" />

                        <TextView
                            android:id="@+id/tv_vote_average"
                            android:layout_width="80sp"
                            android:layout_height="45sp"
                            android:layout_marginStart="30sp"
                            android:layout_marginTop="-20sp"
                            android:scrollbarSize="4sp"
                            android:textColor="@android:color/white" />
                        <ImageView
                            android:id="@+id/img_favorite"
                            android:layout_width="60dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="5sp"
                            android:scrollbarSize="4sp"
                            android:src="@drawable/ic_favorite_border" />
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbarSize="4sp">

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginStart="10sp"
                    android:fontFamily="sans-serif-black"
                    android:scrollbarSize="4sp"
                    android:text="Description"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:maxLines="5"
                    android:layout_marginTop="5sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:scrollbarSize="4sp"
                    android:text="Loading ...." />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbarSize="4sp">

                <TextView
                    android:id="@+id/txt_cast_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginStart="10sp"
                    android:fontFamily="sans-serif-black"
                    android:scrollbarSize="4sp"
                    android:text="Cast"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_cast_detail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:scrollbarSize="4sp">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbarSize="4sp">

                <TextView
                    android:id="@+id/txt_trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="10sp"
                    android:fontFamily="sans-serif-black"
                    android:text="Trailer"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_trailer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>